@model IEnumerable<BO.Samourai>

@{
    ViewBag.Title = "Liste des Samourais";
}

    <h2>Liste des Samourais</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Force)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Arme.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtsMartiaux)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Force)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nom)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Arme.Nom)
    </td>
    <td>

        <ul>

            @foreach (var art in item.ArtsMartiaux)

            {

                <li>@Html.DisplayFor(modelItem => art.Nom)</li>

            }

        </ul>

    </td>
        <td>
            @Html.ActionLink("Editer", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
